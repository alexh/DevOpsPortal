<!DOCTYPE html>
<html lang="en">
<head>
    <title>My Applications</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/images/icons/favicon.ico">
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.css">
</head>
<body>
    <!--BEGIN TITLE & BREADCRUMB PAGE-->
    <div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
        <div class="page-header pull-left">
            <div class="page-title">
                My Applications
            </div>
        </div>
        <ol class="breadcrumb page-breadcrumb pull-right">
            <li><i class="fa fa-home"></i>&nbsp;<a href="~/Home/Dashboard">Home</a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
            <li class="hidden"><a href="#">My Applications</a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
            <li class="active">My Applications</li>
        </ol>
        <div class="clearfix">
        </div>

    </div>
    <!--END TITLE & BREADCRUMB PAGE-->
    <!--BEGIN CONTENT-->
    <div class="page-content">
        <div id="tab-general">
            <div row mbl>
                <div class="panel panel-blue">
                    <div class="panel-heading">My Application List</div>
                    <div class="panel-body">
                        <table id="data" class="table table-hover-color">
                            <thead>
                                <tr>
                                    <th>Details</th>
                                    <th>Program</th>
                                    <th>Environment</th>
                                    <th>Machine</th>
                                    <th>Team</th>
                                    <th>Automated</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts{
        <script>
            // Read a page's GET URL variables and return them as an associative array.
            function getUrlVars() {
                var vars = {};
                var parts = window.location.href.replace(/[?&]+([^=&]+)=([^&]*)/gi, function (m, key, value) {
                    vars[key] = value;
                });
                return vars;

            }
            $(document).ready(function () {

                var env = getUrlVars()['e'];
                var team = getUrlVars()['t'];
                var prog = getUrlVars()['p']

                var Table = $('#data').DataTable({
                    "lengthMenu": [[100, 250, 500, -1], [100, 250, 500, "ALL"]],
                    "ajax": {
                        "url": "/User/GetMyApps/",
                        "dataSrc": ""
                    },
                    "order": [[1, "asc"]],
                    "columns": [
                         {
                             data: 'App_ID',
                             render: function (data, type, full, meta) {
                                 return '<div align="center"> <a class="fa fa-info-circle" href="/Applications/Details/' + data + '"></a> </div>';
                             }
                         },
                        { data: 'Program' },
                        { data: 'Environment' },
                         { data: 'Machine' },
                        { data: 'Team' },
                        { data: 'IsAutomated' }
                    ],

                    "searchCols": [
                        null,
                       { "search": prog, "escapeRegex": false },
                        { "search": env, "escapeRegex": false },
                            null,
                        { "search": team, "escapeRegex": false },
                        null
                    ]
                });



            });
        </script>
        <script src="~/script/jquery-1.10.2.min.js"></script>
        <script src="~/script/jquery-migrate-1.2.1.min.js"></script>
        <script type="text/javascript" src="~/Scripts/DataTable.js"></script>
        <script src="~/script/responsive-tabs.js"></script>
        <script src="~/script/jquery-migrate-1.2.1.min.js"></script>
        <script src="~/script/jquery.news-ticker.js"></script>
    }

