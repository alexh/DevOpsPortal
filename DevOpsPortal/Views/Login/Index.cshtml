@model ActiveDirectoryAuthentication.Controllers.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/styles/normalize.css" />
<link rel="stylesheet" href="~/styles/InputField.css" />


<script src="js/prefixfree.min.js"></script>

<h2 align="center">Login</h2>

<div class="row">
    <div class="row">
        @*@using (Html.BeginForm("Index", "Login", FormMethod.Post)) {
                @Html.AntiForgeryToken()
                <span>
                    <input class="gate" id="Username" type="text" placeholder="Exclude domain" /><label for="class">Username</label>
                </span>
                <span>
                    <input class="gate" id="Password" type="text" placeholder="" /><label for="element">Password</label>
                </span>
                <input type="submit" value="Log in" class="btn btn-default" />
            }*@
    </div>
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Username, new { @class = "gate" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "gate" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>